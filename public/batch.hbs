    <div class="flex-col " id="tt">

        <div class="flex-row " style="padding: 0.4rem 0.5rem; border-radius: 0.5rem;" id='hour'>

            <div class="hour-1 day-0 bg-white border flex-col" style="min-height: 1.5rem; aspect-ratio: 2.8 / 1;">8-9
            </div>
            <div class="hour-2 day-0 bg-white border flex-col" style="min-height: 1.5rem; aspect-ratio: 2.8 / 1;">9-10
            </div>
            <div class="hour-3 day-0 bg-white border flex-col" style="min-height: 1.5rem; aspect-ratio: 2.8 / 1;">10-11
            </div>
            <div class="hour-4 day-0 bg-white border flex-col" style="min-height: 1.5rem; aspect-ratio: 2.8 / 1;">11-12
            </div>
            <div class="hour-5 day-0 bg-white border flex-col" style="min-height: 1.5rem; aspect-ratio: 2.8 / 1;">12-1
            </div>
            <div class="hour-6 day-0 bg-white border flex-col" style="min-height: 1.5rem; aspect-ratio: 2.8 / 1;">1-2
            </div>
            <div class="hour-7 day-0 bg-white border flex-col" style="min-height: 1.5rem; aspect-ratio: 2.8 / 1;">2-3
            </div>
            <div class="hour-8 day-0 bg-white border flex-col" style="min-height: 1.5rem; aspect-ratio: 2.8 / 1;">3-4
            </div>
            <div class="hour-9 day-0 bg-white border flex-col" style="min-height: 1.5rem; aspect-ratio: 2.8 / 1;">4-5
            </div>
        </div>
    </div>


    <section>
        <div>

            <div class="flex-col h1-container">
                <h1>Announcements</h1>
                
            </div>
            <div id="announcements" class="">

                <div class=" border message message-form">

                    <div class="flex-row">
                        <input id="announcement-message-form-heading" placeholder="Enter Heading"
                            class="flex-col border">

                        <div class="flex-col fs-100 stamp" style="--col-gap: 0; align-items: flex-end;">
                            <br>
                            <span>expires in
                                <input id="announcement-message-form-dte" placeholder="days to expire" type="text"
                                    class="border"></span>
                        </div>
                    </div>
                    <br>
                    <input style="width: 100%;" id="announcement-message-form-content"
                        placeholder="Enter content of the announcement" class="border">
                    <br>
                    <br>
                    <button id="announcement-message-form-submit">submit</button>
                </div>

            </div>
        </div>
        <br>
</body>
